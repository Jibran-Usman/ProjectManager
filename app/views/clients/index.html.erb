<div class='form-inline d-flex flex-row-reverse'>
  <div class='form-group'>
    <%= form_tag(home_path, method: :get) do %>
      <%= text_field_tag :name, params[:name], class: 'form-control' %>
      <%= submit_tag 'Search', name: nil, class: 'btn btn-primary' %>
      <%= link_to 'New Client', new_client_path,
        class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

<%= page_entries_info @clients %>
<table class='table table-condensed table-hover table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Affiliation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.affiliation %></td>
        <td><%= link_to 'Show', client, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_client_path(client),
          class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', client, method: :delete,
          data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @clients, theme: 'twitter-bootstrap-4' %>
