<div class='form-inline d-flex flex-row'>
  <div class='form-group'>
    <%= form_tag(home_path, method: :get) do %>
      <%= text_field_tag :name, params[:name], class: 'form-control' %>
      <%= submit_tag 'Search', name: nil, class: 'btn btn-primary' %>
      <%= link_to 'New Project', new_client_project_path(@client),
        class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

<%= page_entries_info @projects %>
<table class='table table-condensed table-hover table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Client</th>
      <th>Affiliation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= @client.name %></td>
        <td><%= @client.affiliation %></td>
        <td><%= link_to 'Show', client_project_path(@client, project),
          class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_client_project_path(@client, project),
          class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy',
          client_project_path(@client, project), method: :delete,
          data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @projects, theme: 'twitter-bootstrap-4' %>
